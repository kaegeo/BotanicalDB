<h1>Login</h1>
<form class="m-3" method="post" asp-action="Login" >
    <div class="row mb-3">
        <label class="col-md-2 pt-2 form-label">UserName</label>
        <div class="col-md-3">
            <input asp-for="UserName" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-md-2 pt-2 form-label">Password</label>
        <div class="col-md-3">
            <input type="password" asp-for="Password" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-md-2 pt-2 form-label">Keep Logged In?</label>
        <div class="col-md-3 pt-2">
            <input type="checkbox" asp-for="KeepLogin" />
        </div>
    </div>
    <div>
        <button type="submit" class="mt-3 btn btn-secondary">Log In</button>
    </div>
</form>
